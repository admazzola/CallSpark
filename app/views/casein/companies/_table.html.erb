<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Id", :id %></th>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Bpid", :BPID %></th>
			<th><%= casein_sort_link "Address", :address %></th>
			<th><%= casein_sort_link "Bi customer no", :bi_customer_no %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% companies.each do |company| %>
		<tr>
			<td><%= casein_table_cell_link company.id, casein_company_path(company) %></td>
			<td><%= casein_table_cell_link company.name, casein_company_path(company) %></td>
			<td><%= casein_table_cell_link company.BPID, casein_company_path(company) %></td>
			<td><%= casein_table_cell_link company.address, casein_company_path(company) %></td>
			<td><%= casein_table_cell_link company.bi_customer_no, casein_company_path(company) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_company_path(company), :method => :delete, :data => { :confirm => "Are you sure you want to delete this company?" }) %>
			</td>
		</tr>
	<% end %>
</table>