<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Name", :name %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% initiatives.each do |initiative| %>
		<tr>
			<td><%= casein_table_cell_link initiative.name, casein_initiative_path(initiative) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_initiative_path(initiative), :method => :delete, :data => { :confirm => "Are you sure you want to delete this initiative?" }) %>
			</td>
		</tr>
	<% end %>
</table>