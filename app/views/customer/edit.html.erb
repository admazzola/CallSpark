

<% @customer = Customer.find(params[:id])  %>

<% @company = Company.where(id: @customer.company_id).first  %>

<%
if(@company != nil)
	companyname = @company.name
end
%>



<h2>Update <%= @customer.name %> </h2>


<%= form_for @customer, url: { action: "update" } do |f| %>



<div class="row">
	
  <div class="col-lg-6">
  
    <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  
  
  <p>
    <%= f.label :company %><br>
        
    <%= text_field_tag 'customer[companyname]', companyname %>
       
  </p>
    
  <p>
    <%= f.label :phone_number %><br>
    <%= f.text_field :phone_number %>
  </p>
  
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
 
  </div>
  
  <div class="col-lg-6">
  	<p>
    <%= f.label :notes %><br>
    <%= f.text_area :notes ,:rows => 5 %>
  </p>
  	 </div>
  	 
  	
 </div>

 
  <p>
    <%= f.submit  "Submit Updates", class: "btn btn-success savecall-button col-md-2 col-md-offset-2" %>
  </p>
<% end %>