

<% this_call = Call.find(params[:id])  %>

<h2> Call Logged </h2>


 <div class="panel panel-default">
  <div class="panel-heading">Caller Information</div>
  <div class="panel-body">
  
<p> 
Caller: <a href="<%= url_for this_call.getCustomer %>"> <%= this_call.getCustomer.name %> </a>
</p>

  
<p> 
Phone: <%= this_call.getCustomer.phone_number %>
</p>

<p> 
Email: <%= this_call.getCustomer.email %>
</p>

<p> 
	
	
Company: <%= 
if(this_call.getCustomer.company != nil)
this_call.getCustomer.company.name 
end
%>

</p>

<% if this_call.getUser %>
<p> 
Respondant: <%= this_call.getUser.name %>
</p>

<% end %>



	
  </div>
</div>
 



 <div class="panel panel-default">
  <div class="panel-heading"> 
  	<%= this_call.getCategoryName  %> Support
  	
  	<div class="label label-primary pull-right"><%= time_ago_in_words(this_call.created_at) %> ago</div>
  	</div>
  <div class="panel-body">
   <%= simple_format(this_call.text) %>
  </div>
</div>
 
