

<h2> Call Logged </h2>


 <div class="panel panel-default">
  <div class="panel-heading">Caller Information</div>
  <div class="panel-body">

  <% if @call.getCustomer %>
<p>

Caller: <a href="<%= url_for @call.getCustomer %>"> <%= @call.getCustomer.name %> </a>

</p>

<p>

Taken:   <%= format_standard_date(@call.called_at,true) %>

</p>

<% if @call.getCustomer.job_role %>
<p>
Job Role: <%= @call.getCustomer.job_role.name %>
</p>
<% end %>

<p>
Phone: <%= @call.getCustomer.getFormattedPhone %>
</p>

<p>
Email: <%= @call.getCustomer.email %>
</p>

<%if(@call.getCustomer.company != nil) %>
<p>
Company:
 <a href="<%= url_for @call.getCustomer.company %>"> <%=  @call.getCustomer.company.name %> </a>
</p>


<% if @call.initiative %>
<p>
Initiative: <%= @call.initiative.name %>
</p>
<% end %>

<% if @call.product_vendor %>
<p>
Product Vendor: <%= @call.product_vendor.name %>
</p>
<% end %>

<% if @call.category %>
<p>
Product Category: <%= @call.category.name %>
</p>
<% end %>





<%end%>

<%if(@call.region != nil) %>
<p>
Region: <a href="<%=url_for @call.region%>" > <%= @call.region.name %> </a>
</p>
<% end %>

<% end %>

<% if @call.getUser %>
<p>

Respondant:
<a href="<%= url_for @call.getUser %>"> <%= @call.getUser.name %> </a>
</p>

<% end %>



<p>
Question: <%= @call.question_for_call %>
</p>

<p>
Resolution: <%= @call.resolution_for_call %>
</p>


  </div>
</div>




 <div class="panel panel-default">
  <div class="panel-heading">
  	Call Notes

  	<div class="label label-primary pull-right"><%= time_ago_in_words(@call.called_at) %> ago</div>
  	</div>
  <div class="panel-body">
   <%= simple_format(@call.text) %>
  </div>
</div>


 <a href = "<%= url_for edit_call_path(@call) %>">
        	<button type="button" class="btn btn-warning col-md-4 col-md-offset-4">Edit Conversation</button>
   </a>
