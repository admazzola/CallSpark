
<h1>All Calls</h1>




<table>
  <thead>
    <tr>
    <th>Caller</th>
      <th>Text</th>
    
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% Call.all.each do |call| %>
    
    <% caller = Customer.where(:id => call.customer_id).first  %>
    
      <tr>
      	
      	<td><%= caller.name %></td>
        <td><%= call.text %></td>
      
        <td><%= link_to 'Show', call %></td>
        <td><%= link_to 'Edit', edit_call_path(call) %></td>
        <td><%= link_to 'Destroy', call, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
