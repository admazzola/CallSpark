
<h1>All Calls</h1>



  <div class="table-responsive">
    <table id="table"
                data-toggle="table"
                data-url="/calls/data"
                data-height="400"
                data-side-pagination="server"
                data-pagination="true"
                data-page-list="[5, 10, 20, 50, 100, 200]"
                data-search="false">
             <thead>
             <tr>
                 <th data-field="id">ID</th>
                 <th data-field="caller" data-formatter="nameFormatter">Caller</th>
                 <th data-field="responder">Responder</th>
                 <th data-field="category">Topic</th>
                 <th data-field="timeago" data-formatter="timeFormatter">Time</th>
             </tr>
             </thead>
         </table>
</div>


<a href="/calls/new">
<button type="button" class="btn btn-success savecall-button col-md-3 col-md-offset-3 ">
	Add a new call
</button>
</a>


<script>
    var $table = $('#table');

    function nameFormatter(value,row)
    {

      return '<a href="/calls/'  + row.id + '">'+value+'</a>'
    }

    function timeFormatter(value,row)
    {

      return $.timeago(value);
    }

