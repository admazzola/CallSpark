
<h1>All Calls</h1>



  <div class="table-responsive">
    <table id="maintable" class="table table-bordered table-hover table-striped">
  <thead>
    <tr>
   <th>Id</th>
    <th>Caller</th>
     <th>Answerer</th>
      <th>Topic</th>
       <th>Time</th>
    
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% Call.all.reverse.each do |call| %>
    
    
    <% caller = Customer.find_by_id(call.customer_id)  %>
      <% answerer = User.find_by_id(call.user_id)  %>
      
      <% if caller != nil && answerer != nil %>
    
      <tr>
      	 <td><%= call.id %></td>
      	 
      	
      	<% if caller != nil %>
      	<td> <a href="<%= url_for caller %>"> <%= caller.name %> </a></td>
      	 <% else%>
       <td> UNKNOWN CALLER </td>
        <% end %>
        
        <% if answerer != nil %>
        	<td> <%= answerer.firstname %> </td>
         <% else%>
      		<td> </td>
        <% end %>
      	
        <td><%= call.getCategoryName %></td>
        
        <td><%= time_ago_in_words(call.created_at) %> ago</td>
      
        <td>
        	<a href = "<%= url_for call %>">
        	<button type="button" class="btn btn-show">Show</button>
        	</a>        	
        </td>
        
    <!--   <td>
        	<a href = "<%= url_for edit_call_path(call) %>">
        	<button type="button" class="btn btn-edit">Edit</button>
        	</a>        	
        </td>
        
        <td>
        	<a href = "<%= url_for call  %>" data-confirm="Are you sure?" data-method="delete" rel="nofollow">
        	<button type="button" class="btn btn-destroy">Destroy</button>
        	</a>        	
        </td>
                -->         
      </tr>
      
      
      <% end %>
    <% end %>
  </tbody>
</table>
</div>


<a href="/calls/new">
<button type="button" class="btn btn-success savecall-button col-md-3 col-md-offset-3 ">
	Add a new call	
</button>
</a>


<script>
	$(document).ready(function() {
    $('#maintable').dataTable();
} );

</script>
