

 <div class="row">
        <div class="col-lg-12">
          <h3 class="page-header">Project Information</h3>
        </div>
                <!-- /.col-lg-12 -->
    </div>

  <div class="panel panel-default">
 <div class="panel-heading"><h4><%= @project.name%></h4></div>
 <div class="panel-body row">

   <div class="col-sm-6">




     <% if @project_owner %>
     <p>

     Project Creator:
     <a href="<%= url_for @project_owner %>"> <%= @project_owner.name %> </a>
     </p>

     <% end %>


     <p>
       Segments:
       <span class="product-segment-labels-container">
           <%  @product_segments.each do |segment| %>
               <span class="label  label-primary product-segment-label">
                <%= segment.name.humanize %>
              </span>
           <% end %>
         </span>
     </p>

     <div class="project-assignment-group">
       Assigned To Project:

       <ul class="project-assignment-list">
          <% @assignments.each do |user| %>
          <li class="project-assignment-row">
            <span class="project-assignment-name">
              <%=  user.name %>
             </span>
             <span class="project-assignment-options">
               <a href="#/" onclick="removeProjectAssignment(<%=@project.id%>,<%=user.id%>)">
               <div class="project-assignment-destroy-button">
                 X
               </div>
              </a>
              </span>
          </li>
          <% end %>
       </ul>

       <input type="text" id="new-project-assignment-user-field" data-project-id=<%=@project.id %>  placeholder="Assign New User" class="form-control"><br>


     </div>


   </div>

   <div class="col-sm-6">
     <% if @customer %>
    <p>
    Primary Contact: <a href="<%= url_for @customer %>"> <%= @customer.name %> </a>
    </p>

    <p>
    Phone: <%= @customer.getFormattedPhone %>
    </p>

    <p>
    Email: <%= @customer.email %>
    </p>

    <% end %>


    <%if(@project.primary_company and @project.primary_company.name  ) %>
    <p>
    Primary Company:
    <a href="<%= url_for @project.primary_company %>"> <%=  @project.primary_company.name %> </a>

    </p>
    <%end%>

    <%if(@project.secondary_company and @project.secondary_company.name  ) %>
    <p>
    Secondary Company:
    <a href="<%= url_for @project.secondary_company %>"> <%=  @project.secondary_company.name %> </a>

    </p>
    <%end%>


    <div class="dates-section">
      <%if(@project.data_received_date  ) %>
        <p>
        Data Received On: <%= format_standard_date @project.data_received_date %>
        </p>
       <%end%>
       <%if(@project.sized_date  ) %>
         <p>
         Solution Sized On: <%= format_standard_date @project.sized_date %>
         </p>
        <%end%>
        <%if(@project.proposal_date  ) %>
          <p>
          Proposal Given On: <%= format_standard_date @project.proposal_date %>
          </p>
         <%end%>
         <%if(@project.follow_up_date  ) %>
           <p>
           Follow Up On: <%= format_standard_date @project.follow_up_date %>
           </p>
          <%end%>

    </div>


   </div>






 </div>
</div>

<div class="edit-button-container">
<a href = "<%= url_for edit_project_path(@project) %>">
         <div   class="btn btn-warning col-md-4 col-md-offset-4">Edit Project</div>
  </a>

  <div style="clear: both; line-height: 0;">&nbsp;</div>
</div>



<%= render partial: "interface/acts_as_commentable", locals:{comments: @comments, parent: @project, user: current_user} %>

<script>


var availableUserTags =  <%= raw all_users_for_autocomplete  %> ;

    $( "#new-project-assignment-user-field" ).autocomplete({
      source: availableUserTags,
      focus: function(event, ui) {
            // prevent autocomplete from updating the textbox
            event.preventDefault();
            // manually update the textbox
            $(this).val(ui.item.label);
      },
      select: function(event, ui) {
            // prevent autocomplete from updating the textbox
            event.preventDefault();
            // manually update the textbox and hidden field
            $(this).val(ui.item.label);

            var project_id = $(this).data('project-id')
            //$(".primary-company-id-field:first").val(ui.item.value);
            addUserToProjectList( project_id, ui.item.value   );
      }
    });

    function addUserToProjectList(project_id,user_id)
    {

      $.ajax({
      method: "POST",
      url:  "/project_assignment",
      data: {project_id: project_id, user_id: user_id}
     })
      .done(function( response ) {
        console.log(response);
        location.reload();

      });

    }
    function removeProjectAssignment(project_id,user_id)
    {
      $.ajax({
      method: "POST",
      url:  "/project_assignment_remove",
      data: {project_id: project_id, user_id: user_id}
     })
      .done(function( response ) {
        console.log(response);
        location.reload();

      });
    }

</script>
