<h2>Categories</h2>

<% if Category.all.first %>

<table class="table table-hover collection">
      <thead>
        <tr>
          
          <th>Name</th>
         
        </tr>
      </thead>
      <tbody>


          <%
          pagenum = params[:id].to_i
          recordsPerPage = 20
          offset = pagenum * recordsPerPage
          %>

        <% # Event.limit(recordsPerPage).offset(offset).each do |item| %>
          <% Category.all.each do |item| %>
     
         


        <tr>
   
    <td> <%= item.name %> </td>
   
    <td>

     
     <%= form_tag({controller: "category",action: "destroy"}, method: "post") do %>  
      <%= hidden_field_tag 'category_id', item[:id] %>
      <%= submit_tag("Delete") %>
      <%   end %>
    

    </td>
    </tr>

    <% end  %>

       
       
      </tbody>
    </table>


 <% else  %>

<div class="alert alert-danger">No categories are listed!</div>


 <% end  %>



<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">List a new category</h3>
  </div>
  <div class="panel-body">
    


<%= form_for :newcategory, url: {controller: "category",action: "create"}, html: {id:"main-form",class: "form-group"} do |f| %>
<div class="form-group" id="input-name">
   <label for="InputName">Name</label>
  <%= f.text_field :name   , class: "form-control", placeholder:"Category name"%>
  </div>



 <% f.submit "Category#Create" , class: "btn btn-success", style:"width:100%" %>
  <% submit_tag  :onclick => "return validateform();", class: "btn btn-success", style:"width:100%" %>
 <button type="submit" id="submit-btn" class="btn btn-success" style="width:100%">Submit</button>


</div>

<% end %>

  </div>
