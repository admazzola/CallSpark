<h2>Categories</h2>

<% if Event.all.first %>

<table class="table table-hover collection">
      <thead>
        <tr>
          
            <th>Date</th>
          <th>Name</th>
         <th>Description</th>
         
        </tr>
      </thead>
      <tbody>


          <%
          pagenum = params[:id].to_i
          recordsPerPage = 20
          offset = pagenum * recordsPerPage
          %>

        <% # Event.limit(recordsPerPage).offset(offset).each do |item| %>
          <% Event.all.each do |item| %>
     		
         


        <tr>
   
    <td> 
    	<%= 
    if item.date
   		 item.date.to_formatted_s(:long_ordinal)
   	else
   		render text: "no date"
	end
   %> 
   
   </td>
   
   
    <td> <%= item.name %> </td>
    <td> <%= item.description %> </td>
    
    
    <td>

     
     <%= form_tag({controller: "event",action: "destroy"}, method: "post") do %>  
      <%= hidden_field_tag 'event_id', item[:id] %>
      <%= submit_tag("Delete") %>
      <%   end %>
    

    </td>
    </tr>

    <% end  %>

       
       
      </tbody>
    </table>


 <% else  %>

<div class="alert alert-danger">No events are listed!</div>


 <% end  %>



<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">List a new event</h3>
  </div>
  <div class="panel-body">
    


<%= form_for :newevent, url: {controller: "event",action: "create"}, html: {id:"main-form",class: "form-group"} do |f| %>






<div class="form-group" id="input-name">
   <label for="InputName">Name</label>
  <%= f.text_field :name   , class: "form-control", placeholder:"Event name"%>
  </div>





<div class="form-group" id="input-date">
   <label for="InputDate">Date</label>
   <br>

 <input class="form-control" type="text" id="newevent_date" name="newevent[date]">
</div>


 <script>
  $(function() {
    $( "#newevent_date" ).datepicker();
  });
  </script>





<div class="form-group" id="input-description">
   <label for="InputEmail">Description</label>
  <%= f.text_area :description  , class: "form-control", placeholder:"A great event" %>
</div>






 <% f.submit "Event#Create" , class: "btn btn-success", style:"width:100%" %>
  <% submit_tag  :onclick => "return validateform();", class: "btn btn-success", style:"width:100%" %>
 <button type="submit" id="submit-btn" class="btn btn-success" style="width:100%">Submit</button>


</div>

<% end %>

  </div>
</div>




